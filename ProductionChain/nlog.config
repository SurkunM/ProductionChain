<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	autoReload="true"
	internalLogFile="productionChain-internal.log"
	internalLogLevel="Info">

	<targets>
		<target name="logfile"
				xsi:type="File"
				fileName="productionChainLogs/${shortdate}.log"
				layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}"/>
		<target name="logconsole"
				xsi:type="Console"
				layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}"/>
	</targets>

	<rules>
		<logger name="Microsoft.*" minlevel="Warning" writeTo="logfile,logconsole" final="true"/>

		<logger name="ProductionChain.*" minlevel="Information" writeTo="logfile,logconsole" final="true"/>

		<logger name="*" minlevel="Warning" writeTo="logfile,logconsole"/>
	</rules>
</nlog>